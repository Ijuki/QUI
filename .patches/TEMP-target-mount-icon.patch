+local function GetMountInfoFromSpellID(spellID)
+    spellID = SafeValue(spellID, nil)
+    if type(spellID) ~= "number" or spellID <= 0 then
+        return nil
+    end
+    if not (C_MountJournal and C_MountJournal.GetMountFromSpell) then
+        return nil
+    end
+
+    local okMount, mountID = pcall(C_MountJournal.GetMountFromSpell, spellID)
+    mountID = SafeValue(mountID, nil)
+    if not okMount or type(mountID) ~= "number" or mountID <= 0 then
+        return nil
+    end
+
+    local mountName, mountIcon = nil, nil
+    if C_MountJournal.GetMountInfoByID then
+        local okInfo, name, mountSpellID, icon = pcall(C_MountJournal.GetMountInfoByID, mountID)
+        if okInfo then
+            if type(name) == "string" and name ~= "" then
+                mountName = name
+            end
+            if type(icon) == "number" or type(icon) == "string" then
+                mountIcon = icon
+            end
+            mountSpellID = SafeValue(mountSpellID, nil)
+            if type(mountSpellID) == "number" and mountSpellID > 0 then
+                spellID = mountSpellID
+            end
+        end
+    end
+
+    return mountID, mountName, mountIcon, spellID
+end
+
+local function FindMountedAuraData(unit)
+    if type(unit) ~= "string" or unit == "" then
+        return nil
+    end
+    if not UnitExists(unit) then
+        return nil
+    end
+
+    local found
+    local function TryAura(auraName, auraIcon, auraSpellID)
+        auraSpellID = SafeValue(auraSpellID, nil)
+        if type(auraSpellID) ~= "number" then
+            return false
+        end
+        local mountID, mountName, mountIcon, mountSpellID = GetMountInfoFromSpellID(auraSpellID)
+        if not mountID then
+            return false
+        end
+        found = {
+            spellID = mountSpellID or auraSpellID,
+            mountID = mountID,
+            name = mountName or auraName,
+            icon = mountIcon or auraIcon,
+        }
+        return true
+    end
+
+    if AuraUtil and AuraUtil.ForEachAura then
+        local ok = pcall(AuraUtil.ForEachAura, unit, "HELPFUL", nil, function(aura)
+            if not aura then
+                return false
+            end
+            return TryAura(aura.name, aura.icon, aura.spellId)
+        end, true)
+        if ok and found then
+            return found
+        end
+    end
+
+    if UnitAura then
+        for i = 1, 40 do
+            local ok, name, icon, _, _, _, _, _, _, _, spellID = pcall(UnitAura, unit, i, "HELPFUL")
+            if not ok or not name then
+                break
+            end
+            if TryAura(name, icon, spellID) then
+                break
+            end
+        end
+    end
+
+    return found
+end
