+    frame.mountIconFrame._quiMountSpellID = mountData.spellID
+    frame.mountIconFrame._quiMountName = mountData.name
+    frame.mountIconTexture:SetTexture(mountData.icon or 134400)
+    frame.mountIconFrame:Show()
+end
